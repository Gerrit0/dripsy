{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "./build",
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "@dripsy/core": ["../core/src"]
    }
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "examples", "node_modules"],
  "references": [
    { "path": "../core" }
  ]
}
