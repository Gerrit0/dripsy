{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@dripsy/*": ["../../packages/*/src"],
      "dripsy": ["../../packages/dripsy/src"]
    }
  },
  "references": [
    { "path": "../../packages/dripsy" },
    { "path": "../../packages/core" },
    { "path": "../../packages/gradient" },
  ]
}
